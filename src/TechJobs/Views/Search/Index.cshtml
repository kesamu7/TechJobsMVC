<h1>@ViewBag.title</h1>
 
<form method="post">
    <h2>Search by:</h2>

    <p>
        @foreach (KeyValuePair<string, string> column in ViewBag.columns)
        {
            <span>
                <input type="radio"
                       name="searchType"
                       id="@column.Key"
                       value="@column.Key" 
                       checked="@column.Key == 'all''"/>
                <label for="@column.Key">@column.Value</label>
            </span>
        }
    </p>

    <p>
        <label for="searchTerm">Keyword:</label>
        <input type="text" name="searchTerm" id="searchTerm" />
    </p>

    <input type="submit" value="Search" />
</form>

<hr />



    @if (ViewBag.jobs != null)
    
    {
            
            <h3>@ViewBag.jobs.Count Result(s)</h3>

            // TODO #2 - Loop over jobs dictionary and display all job fields

            <p>
                @foreach (var job in ViewBag.jobs)
                {
                    <table width="500px";>
                        @foreach (KeyValuePair<string, string> j in job)
                    {
                            <tr>
                                <td style="font-weight:bold;text-align:left;">@j.Key</td>
                                <td>@j.Value</td>
                            </tr>
                        }
                    </table>
                    <br />
                    <br />
                }

            </p>
        



    }


